{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES2019",
		"module": "CommonJS",
		"lib": [ "ES2019" ],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"strict": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,

		"declarationDir": "dist/types",
		"outDir": "dist/lib",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	],
	"typedocOptions": {
		"entryPoints": [ "src/index.ts" ],
		"out": "apidocs",
		"excludePrivate": true
	}
}
