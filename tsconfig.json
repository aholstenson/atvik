{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES2017",
		"module": "CommonJS",
		"lib": [ "ES2017" ],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"strict": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,

		"declarationDir": "dist/types",
		"outDir": "dist/lib",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	]
}
